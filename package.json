{
    "name": "stage-2-catalog",
    "version": "1.0.0",
    "description": "stage 2. Catalog project. Angular + Node.js",
    "main": "index.js",
    "scripts": {
        "start:dev": "docker-compose up -d",
        "stop:dev": "docker-compose down",
        "update-db": "knex migrate:latest",
        "seed-db": "knex seed:run",
        "install:clear-server": "rm -rf node_modules",
        "install:clear-client": "rm -rf client/node_modules",
        "install:clear-all": "npm install:clear-server & npm install:clear-client",
        "install:server": "npm install",
        "install:client": "cd client/ && npm install",
        "install:all": "npm run install:server & npm run install:client",
        "install:all-from-scratch": "npm run install:clear-all & npm run install:all",
        "dev:server": "nodemon index.js",
        "dev:client": "cd client/ && ng serve --host 0.0.0.0",
        "dev:all": "npm run dev:server & npm run dev:client",
        "build:client": "cd client/ && ng build --prod",
        "production": "npm run build:client && pm2 start index.js"
    },
    "author": "yehor.lebid@codeit.pro",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jimp": "^0.16.1",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.21.21",
        "moment": "^2.29.1",
        "multer": "^1.4.2",
        "pg": "^8.5.1"
    }
}
